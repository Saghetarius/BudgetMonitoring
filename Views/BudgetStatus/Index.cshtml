@model BudgetMonitoring.Models.BudgetStatusModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Статус бюджета</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
            body {
            font-family: Arial, sans-serif;

            background-color: #f5f7fa;
            color: #333;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 600;
            color: #4a4a4a;
            text-align: center;
            margin-top: 30px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        .status-item {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
            text-align: center;
        }

        .status-item h2, .status-item h3 {
            font-size: 1.3rem;
            color: #3b3b3b;
            margin-bottom: 10px;
        }

        .status-item p {
            font-size: 1.1rem;
            color: #007bff;
            margin: 0;
        }

        .budget-chart-container {
            margin-top: 40px;
        }

        .total-budget {
            font-size: 2.2em;
            font-weight: bold;
            color: #28a745;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Статус бюджета</h1>

        <!-- Общий бюджет -->
        <div class="status-item">
            <h2>Общий бюджет</h2>
            <p class="total-budget">@Model.TotalBudget.ToString("C")</p>
        </div>

        <!-- Расходы за месяц и год -->
        <div class="status-item">
            <h3>Расходы за месяц / Год</h3>
            <p>Месяц: @Model.MonthlyExpenses.ToString("C")</p>
            <p>Год: @Model.AnnualExpenses.ToString("C")</p>
        </div>

        <!-- Общий долг и задолженность по кредитам -->
        <div class="status-item">
            <h3>Общий долг</h3>
            <p>@Model.TotalDebt.ToString("C")</p>
            <h3>Задолженность по кредитам</h3>
            <p>@Model.CreditDebt.ToString("C")</p>
        </div>

        <!-- Инвестиции за год -->
        <div class="status-item">
            <h3>Инвестиции за год</h3>
            <p>@Model.AnnualInvestments.ToString("C")</p>
        </div>

        <!-- График бюджета -->
        <div class="status-item budget-chart-container">
            <h3>График бюджета</h3>
            <canvas id="budgetChart" width="400" height="200"></canvas>
        </div>
    </div>

    <!-- Script для графика бюджета -->
    <script>
        var ctx = document.getElementById('budgetChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.Months)),
                datasets: [{
                    label: 'Бюджет',
                    data: @Html.Raw(Json.Serialize(ViewBag.Budgets)),
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Месяц'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Бюджет'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return ' Бюджет: ' + context.formattedValue;
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</br></br></br>
</html>
