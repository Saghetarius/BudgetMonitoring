@model BudgetMonitoring.Models.Goal

@{
    Layout = "_Layout";
}

<div class="container my-4">
    <h2 class="text-center text-dark">Создать новую цель</h2>

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h4 class="card-title mb-0">Введите информацию о цели</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label for="Name" class="form-label">Название цели</label>
                    <input type="text" class="form-control" id="Name" name="Name" required placeholder="Введите название цели" />
                </div>

                <div class="form-group mb-3">
                    <label for="TargetAmount" class="form-label">Целевая сумма</label>
                    <input type="number" class="form-control" id="TargetAmount" name="TargetAmount" required placeholder="Укажите целевую сумму" min="1" />
                </div>

                <input type="hidden" name="UserId" value="@User.Identity.Name" /> 
                <input type="hidden" name="IsCompleted" value="false" /> 

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-secondary btn-lg">
                        <i class="bi bi-check-circle"></i> Создать цель
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
}
