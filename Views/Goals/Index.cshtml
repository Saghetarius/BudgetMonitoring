@model BudgetMonitoring.Models.GoalViewModel

@{
    Layout = "_Layout";
}

<div class="container my-4">
    <h2 class="text-center text-dark">Цели</h2>

    <!-- Активные цели -->
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h3 class="card-title mb-0">Активные цели</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Название цели</th>
                        <th>Целевая сумма</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var goal in Model.ActiveGoals)
                    {
                        <tr>
                            <td>@goal.Name</td>
                            <td>@goal.TargetAmount.ToString("C2")</td>
                            <td>
                                <form method="post" action="@Url.Action("MarkAsCompleted", "Goals", new { id = goal.Id })">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Завершить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Завершенные цели -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h3 class="card-title mb-0">Завершенные цели</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Название цели</th>
                        <th>Целевая сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var goal in Model.CompletedGoals)
                    {
                        <tr>
                            <td>@goal.Name</td>
                            <td>@goal.TargetAmount.ToString("C2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Кнопка для добавления новой цели -->
    <div class="text-center">
        <a href="@Url.Action("Create", "Goals")" class="btn btn-lg btn-outline-dark">
            <i class="bi bi-plus-circle"></i> Добавить новую цель
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
}
