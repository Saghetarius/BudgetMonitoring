@model DebtCredit

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Добавить долг</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: Arial, sans-serif;
            color: #495057;
        }

        .container {
            max-width: 500px;
            margin: 50px auto;
            padding: 25px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-weight: bold;
            color: #343a40;
            margin-bottom: 25px;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #495057;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Добавить долг</h2>

        <form asp-action="AddDebtCredit" method="post">
            <!-- Поле для суммы долга -->
            <div class="mb-4">
                <label for="amount" class="form-label">Сумма:</label>
                <input type="number" name="amount" class="form-control" id="amount" required placeholder="Введите сумму" min="0" step="0.01" />
            </div>

            <!-- Поле для даты платежа -->
            <div class="mb-4">
                <label for="dueDate" class="form-label">Дата платежа:</label>
                <input type="date" name="dueDate" class="form-control" id="dueDate" required />
            </div>

            <!-- Скрытое поле для указания, что это долг -->
            <input type="hidden" name="isDebt" value="true" />

            <!-- Кнопка для отправки формы -->
            <button type="submit" class="btn btn-primary">Добавить долг</button>
        </form>
    </div>
</body>
</html>
